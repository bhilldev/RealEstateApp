@model IEnumerable<RealEstateApp.Models.House>

@{
    ViewBag.Title = "House";
}

@foreach (var p in Model)
{
    <div>
        <h3>@p.Street @Html.ActionLink("Edit", "Edit", new { p.HouseID })</h3>
       
        <br />
        Realtor: @p.Realtor.FirstName<br />
        Square Feet: @p.SquareFeet<br />
        Num Bedrooms: @p.NumBedrooms<br />
        Num Baths: @p.NumBaths<br/>
        Price: @p.Price.ToString("c")<br/>
        <br />
        @Html.ActionLink("Delete", "Delete", new { p.HouseID })
    </div>
}

<div>
    <br /><br />
    @Html.ActionLink("Add a new house", "Create")
</div>

